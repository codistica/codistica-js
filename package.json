{
    "name": "codistica-js",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "license": "MIT",
    "browserslist": [
        "since 2015"
    ],
    "engines": {
        "node": ">=10.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "codistica-husky-hooks-handlers pre-commit prettify",
            "commit-msg": "codistica-husky-hooks-handlers commit-msg ./packages",
            "pre-push": "codistica-husky-hooks-handlers pre-push test:quick"
        }
    },
    "scripts": {
        "babel:lib": "lerna exec --ignore @codistica/demo --parallel \"cross-env NODE_ENV=production cross-env NPM_CONFIG_ES_MODULES=false babel --root-mode upward ./src --out-dir ./lib --copy-files\"",
        "babel:lib-es": "lerna exec --ignore @codistica/demo --parallel \"cross-env NODE_ENV=production cross-env NPM_CONFIG_ES_MODULES=true babel --root-mode upward ./src --out-dir ./lib-es --copy-files\"",
        "build": "yarn run clean && yarn run build:dist && yarn run build:lib && yarn run build:lib-es && yarn run build:types && yarn run build:jsdoc && yarn run test",
        "build:dist": "exit 0",
        "build:jsdoc": "jsdoc -c ./.jsdocrc.js",
        "build:lib": "yarn run babel:lib && yarn run flow:copy-lib",
        "build:lib-es": "yarn run babel:lib-es && yarn run flow:copy-lib-es",
        "build:types": "yarn run tsc",
        "clean": "yarn run clean:dist && yarn run clean:jsdoc && yarn run clean:lib && yarn run clean:lib-es && yarn run clean:types && yarn run clean:coverage",
        "clean:dist": "rimraf \"./packages/*/dist\"",
        "clean:jsdoc": "rimraf ./jsdoc",
        "clean:lib": "rimraf \"./packages/*/lib\"",
        "clean:lib-es": "rimraf \"./packages/*/lib-es\"",
        "clean:types": "rimraf \"./packages/*/types\"",
        "clean:coverage": "rimraf ./.nyc_output",
        "coverage": "nyc yarn run test",
        "flow:copy-lib": "lerna exec --parallel --scope @codistica/react \"flow-copy-source ./src ./lib\"",
        "flow:copy-lib-es": "lerna exec --parallel --scope @codistica/react \"flow-copy-source ./src ./lib-es\"",
        "lint": "eslint \"./packages/*/src/**/*.js\"",
        "prepack": "yarn run build",
        "prettify": "prettier --loglevel warn --write \"**/*.{js,json}\"",
        "run:demo": "yarn workspace @codistica/demo run start",
        "run:react": "yarn workspace @codistica/react run storybook",
        "test": "mocha \"./packages/*/lib/__tests__/*.test.js\"",
        "test:quick": "yarn run build:lib && yarn run test",
        "tsc": "lerna exec --ignore @codistica/demo --ignore @codistica/react --parallel --no-bail \"tsc -p ./tsconfig.build.types.json\"",
        "uninstall": "yarn run clean && lerna clean --yes && rimraf ./node_modules"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.9.0",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/preset-flow": "^7.9.0",
        "@babel/preset-react": "^7.9.4",
        "@codistica/babel-preset-default": "^1.0.1",
        "@codistica/eslint-config-default": "^1.0.1",
        "@codistica/husky-hooks-handlers": "^1.0.1",
        "@codistica/prettier-config-default": "^1.0.1",
        "@types/chai": "^4.2.11",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "@types/react": "^16.9.34",
        "@types/tapable": "^1.0.5",
        "@types/webpack": "^4.41.12",
        "cross-env": "^7.0.2",
        "eslint": "^6.8.0",
        "eslint-plugin-flowtype": "^4.7.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jsdoc": "^22.1.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.19.0",
        "flow-bin": "^0.123.0",
        "flow-copy-source": "^2.0.9",
        "husky": "^4.2.3",
        "jsdoc": "^3.6.3",
        "jsdoc-babel": "^0.5.0",
        "lerna": "^3.20.2",
        "mocha": "^7.1.1",
        "nyc": "^15.0.0",
        "prettier": "^2.0.2",
        "rimraf": "^3.0.2",
        "typescript": "^3.8.3"
    }
}
